{
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/react-scripts && node bin/index.js build",
    "create-react-app": "node tasks/index.js",
    "e2e": "tasks/e2e-simple.sh",
    "e2e:docker": "tasks/local-test.sh",
    "publish": "tasks/publish.sh",
    "start": "cd packages/react-scripts && node bin/index.js start",
    "ggts1": "node ./tasks/ggts1.jpg",
    "test": "cd packages/react-scripts && node bin/index.js test",
    "format": "prettier --trailing-comma es5 --single-quote --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'",
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "execa": "1.0.0",
    "fs-extra": "^7.0.1",
    "get-port": "^4.2.0",
    "globby": "^9.1.0",
    "husky": "^1.3.1",
    "jest": "24.9.0",
    "lint-staged": "^8.0.4",
    "meow": "^5.0.0",
    "multimatch": "^3.0.0",
    "prettier": "1.18.2",
    "puppeteer": "^1.13.0",
    "strip-ansi": "^5.1.0",
    "tempy": "^0.2.1",
    "wait-for-localhost": "^3.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ],
    "yarn.lock": [
      "git rm --cached"
    ]
  }
}
